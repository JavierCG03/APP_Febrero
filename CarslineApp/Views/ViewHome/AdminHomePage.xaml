                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    HeightRequest="55"
                                    Padding="15,0"/>
                        </Frame>
                        <!-- INVENTARIO -->
                        <Frame Padding="0" 
                               Margin="0,0,0,8" 
                               CornerRadius="12" 
                               HasShadow="False"
                               BackgroundColor="Gray">
                            <Button Text="âœ… Crear Usuario"
                                    Command="{Binding CrearUsuarioCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    HeightRequest="55"
                                    Padding="15,0"/>
                        </Frame>
                        <!-- SEPARADOR -->
                        <BoxView HeightRequest="1" BackgroundColor="#333" Margin="20,10"/>
                        <Frame Padding="0"
                           Margin="0,0,0,20"
                           CornerRadius="12"
                           HasShadow="False"
                           BackgroundColor="#404040">

                            <Grid HeightRequest="55"
                                  Padding="15,0"
                                  ColumnDefinitions="50,*">

                                <!-- ICONO -->
                                <ImageButton Grid.Column="0"
                                     BackgroundColor="Transparent"
                                     Command="{Binding LogoutCommand}"
                                     Source="cerrarsesion.png"
                                     WidthRequest="50"
                                     HeightRequest="50"                             
                                     VerticalOptions="Center"/>

                                <!-- TEXTO -->
                                <Button Grid.Column="1"
                                        Text="Cerrar SesiÃ³n"
                                        Command="{Binding LogoutCommand}"
                                        BackgroundColor="#404040"
                                        TextColor="White"
                                        FontSize="16"
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </ContentPage>
    </FlyoutPage.Flyout>
    <!-- ================== CONTENIDO PRINCIPAL ================== -->
    <FlyoutPage.Detail>
        <NavigationPage BarBackgroundColor="#B00000" BarTextColor="White" Shell.NavBarIsVisible="False">
            <x:Arguments>
                <ContentPage x:Name="DetailPage">
                    <Grid RowDefinitions="Auto,*" BackgroundColor="#F5F5F5">
                        <!-- HEADER -->
                        <Frame Grid.Row="0" BackgroundColor="#B00000" Padding="10,10" Margin="0" CornerRadius="0" HasShadow="True">
                            <Grid ColumnDefinitions="Auto,*">
                                <ImageButton Grid.Column="0"
                                         Clicked="OnMenuButtonClicked"
                                         Source="menu.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="30"
                                         HeightRequest="30"
                                         HorizontalOptions="Start"
                                         VerticalOptions="Center"/>
                                <Label Grid.Column="1" 
                                       Text="Administrador"
                                       FontSize="23" 
                                       FontAttributes="Bold"
                                       TextColor="White" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>