<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarslineApp.Views.Citas.AgendaCitas"
             Title="Agenda de Citas"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="0">

        <Frame  Grid.Row="0"  BackgroundColor="#B00000" CornerRadius="0">
            <Grid ColumnDefinitions="Auto,*">
                <ImageButton Grid.Column="0"
                    Source="back.png"
                    BackgroundColor="Transparent"
                    HeightRequest="35"
                    WidthRequest="40"
                    Command="{Binding BackCommand}"
                    Padding="5"
                    CornerRadius="25" />
                <Label Grid.Column="1"
                   HorizontalOptions="Center"
                    VerticalOptions="Center"
                   Text="ðŸ“… Agenda de Citas"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,0,0,10"/>
            </Grid>

                <!-- BotÃ³n AtrÃ¡s -->

        </Frame>
               
        <!-- Selector de Vista -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="8" Margin="10,10,10,15">
            <Button Grid.Column="0" Text="DÃ­a"
                Style="{StaticResource TabButtonStyle}"
                Command="{Binding CambiarVistaDiaCommand}" />
            <Button Grid.Column="1" Text="Semana"
                Style="{StaticResource TabButtonStyle}"
                Command="{Binding CambiarVistaSemanaActualCommand}" />
            <Button  Grid.Column="2" Text="Mes"
                Style="{StaticResource TabButtonStyle}"
                Command="{Binding CambiarVistaMesCommand}" />
        </Grid>
        
        <!-- NavegaciÃ³n de fecha -->
        <Grid  Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="10,0,10,15">

            <Button Grid.Column="0"
              Text="â—€"
              Command="{Binding AnteriorCommand}"
              IsVisible="{Binding PuedeRegresar}"
              BackgroundColor="#E0E0E0"
              TextColor="#333333"
              WidthRequest="50"
              CornerRadius="8"/>
            <Label Grid.Column="1"
               Text="{Binding TituloVista}"
               FontSize="20"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="Black"/>

            <Button Grid.Column="2"
               Text="â–¶"
               Command="{Binding SiguienteCommand}"
               BackgroundColor="#E0E0E0"
               TextColor="#333333"
               WidthRequest="50"
                CornerRadius="8"/>
        </Grid>
        <!-- Contenido Principal -->
        <ScrollView Grid.Row="3" Margin="10,0,10,0">
            <VerticalStackLayout>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 Color="#B00000"
                                 HeightRequest="50"/>

                <!-- VISTA DÃA -->
                <VerticalStackLayout IsVisible="{Binding EsVistaDia}">
                    <!-- Slots Horarios -->
                    <CollectionView ItemsSource="{Binding SlotsHorarios}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,10">

                                    <!-- Slot con Cita -->
                                    <Frame IsVisible="{Binding TieneCita}"
                                           BackgroundColor="#FFEBEE"
                                           BorderColor="#B00000"
                                           CornerRadius="8"
                                           Padding="12"
                                           HasShadow="False">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VerDetalleCitaCommand}"
                                                                CommandParameter="{Binding Cita}"/>
                                        </Frame.GestureRecognizers>

                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,*" ColumnSpacing="10">
                                            <Label Grid.Column="0" Grid.Row="0" 
                                                   Text="{Binding HoraTexto}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#B00000"
                                                   HorizontalOptions="Center"
                                                   VerticalTextAlignment="Center"
                                                   Margin="0,0,15,0"/>
                                            <Label  Grid.Column="1" Grid.Row="1" Text="{Binding Cita.VehiculoInfo}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#666666"/>
                                            <Label Grid.Column="1" Grid.Row="0" Text="{Binding Cita.ClienteNombre}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#333333"/>
                                            <Label Grid.Column="0" Grid.Row="1" Text="{Binding Cita.TipoOrden}"
                                                       HorizontalOptions="End"
                                                        FontSize="14"
                                                       TextColor="#B00000"/>

                                        </Grid>
                                    </Frame>

                                    <!-- Slot Disponible -->
                                    <Frame IsVisible="{Binding Disponible}"
                                           BackgroundColor="#E8F5E9"
                                           BorderColor="#1B5E20"
                                           CornerRadius="8"
                                           Padding="12"
                                           HasShadow="False">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DisponibleCommand}"
                                                                CommandParameter="{Binding}"/>
                                        </Frame.GestureRecognizers>
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding HoraTexto}"
                                                   FontSize="16"
                                                   TextColor="Black"
                                                   VerticalTextAlignment="Center"
                                                   Margin="0,0,15,0"/>

                                            <Label Grid.Column="1"
                                                   Text="Disponible"
                                                   FontSize="14"
                                                   TextColor="#1B5E20"
                                                   VerticalTextAlignment="Center"/>
                                            
                                            <Image 
                                                Grid.Column="2"
                                                Source="disponible.png"
                                                   WidthRequest="40"
                                                   HeightRequest="40"/>

                                        </Grid>
                                    </Frame>

                                    <!-- Slot Pasado -->
                                    <Frame IsVisible="{Binding EsPasado}"
                                           BackgroundColor="#F5F5F5"
                                           BorderColor="#CCCCCC"
                                           CornerRadius="8"
                                           Padding="12"
                                           Opacity="0.8"
                                           HasShadow="False">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding HoraTexto}"
                                                   FontSize="16"
                                                   TextColor="#999999"
                                                   VerticalTextAlignment="Center"
                                                   Margin="0,0,15,0"/>

                                            <Label Grid.Column="1"
                                                   Text="No disponible"
                                                   FontSize="14"
                                                   TextColor="#CCCCCC"
                                                   VerticalTextAlignment="Center"/>

                                            <Label Grid.Column="2"
                                                   Text="âœ•"
                                                   FontSize="20"
                                                   TextColor="#CCCCCC"
                                                   VerticalTextAlignment="Center"/>
                                        </Grid>
                                    </Frame>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- VISTA SEMANA COMPLETA -->
                <VerticalStackLayout IsVisible="{Binding EsVistaSemana}">

                    <!-- âœ… NUEVO: Indicador de modo -->
                    <Frame BackgroundColor="#FFF3E0" 
                           Padding="10" 
                           Margin="10,5"
                           CornerRadius="8"
                           HasShadow="False"
                           IsVisible="{Binding EsReagendar}">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ”„" FontSize="16"/>
                            <Label Text="MODO REAGENDAR: Toque un horario disponible"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="#F57C00"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- DÃ­as de la Semana -->
                    <CollectionView ItemsSource="{Binding DiasSemana}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Margin="0,0,0,20">

                                    <!-- Encabezado del DÃ­a -->

                                        <Label Grid.Column="0"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#B00000"
                                               VerticalTextAlignment="Center">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="NombreDia"/>
                                                    <Binding Path="NumeroDia"/>
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>


                                    <!-- Slots del DÃ­a -->
                                    <CollectionView ItemsSource="{Binding Slots}" SelectionMode="None" Margin="0,0,0,20">
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout Orientation="Vertical" Span="2" 
                                                           HorizontalItemSpacing="8" VerticalItemSpacing="8"/>
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <!-- âœ… Frame con TapGestureRecognizer -->
                                                <Frame BackgroundColor="{Binding ColorFondo}"
                                                       BorderColor="{Binding ColorBorde}"
                                                       CornerRadius="6"
                                                       Padding="8"
                                                       HasShadow="False"
                                                       HeightRequest="60">
                                    
                                                    <!-- âœ… Gesture Recognizer -->
                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer 
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                                     Path=BindingContext.HorarioSemanaCommand}"
                                                            CommandParameter="{Binding}"/>
                                                    </Frame.GestureRecognizers>

                                                    <VerticalStackLayout Spacing="2">
                                                        <Grid ColumnDefinitions="Auto,*">
                                                            <Label Grid.Column="0"
                                                                   VerticalOptions="Center"
                                                                   Text="{Binding HoraTexto}"
                                                                   FontSize="12"
                                                                   FontAttributes="Bold"
                                                                   TextColor="#333333"/>

                                                            <Label Grid.Column="1"
                                                                Text="{Binding Cita.TipoOrden}"
                                                                   HorizontalOptions="End"
                                                                   FontSize="13"
                                                                   TextColor="#B00000"
                                                                   FontAttributes="Bold"
                                                                   LineBreakMode="TailTruncation"
                                                                   IsVisible="{Binding TieneCita}"/>

                                                            <Image Grid.Column="1"
                                                                   HorizontalOptions="End"
                                                                   Source="disponible.png"
                                                                   HeightRequest="40"
                                                                   WidthRequest="40"
                                                                   IsVisible="{Binding Disponible}"/>

                                                        </Grid>

                                                        <Label Text="{Binding Cita.ClienteNombre}"
                                                               FontSize="12"
                                                               TextColor="#666666"
                                                               LineBreakMode="TailTruncation"
                                                               IsVisible="{Binding TieneCita}"/>


                                                    </VerticalStackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                 <!-- VISTA MES -->
                <VerticalStackLayout IsVisible="{Binding EsVistaMes}">

                    <!-- Encabezados de dÃ­as -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*" Margin="0,0,0,10">
                        <Label Grid.Column="0" Text="Lun" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="1" Text="Mar" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="2" Text="Mie" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="3" Text="Jue" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="4" Text="Vie" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="5" Text="Sab" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                        <Label Grid.Column="6" Text="Dom" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#B00000"/>
                    </Grid>

                    <!-- DÃ­as del Mes -->
                    <CollectionView ItemsSource="{Binding DiasMes}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="7" HorizontalItemSpacing="4" VerticalItemSpacing="4"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{Binding ColorFondo}"
                                       BorderColor="#B00000"
                                       CornerRadius="6"
                                       Padding="4"
                                       HasShadow="False"
                                       HeightRequest="70"
                                       WidthRequest="45">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SeleccionarDiaCommand}"
                                                            CommandParameter="{Binding}"/>
                                    </Frame.GestureRecognizers>

                                    <Grid RowDefinitions="Auto,*,Auto">
                                        <!-- NÃºmero del dÃ­a -->
                                        <Label Grid.Row="0"
                                               Text="{Binding NumeroDia}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{Binding EsHoy, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#B00000|#333333'}"
                                               HorizontalTextAlignment="Center"/>

                                        <!-- Indicador de citas pasadas -->
                                        <Label Grid.Row="1"
                                               Text="âœ•"
                                               FontSize="20"
                                               TextColor="#CCCCCC"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               IsVisible="{Binding EsPasado}"/>

                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
