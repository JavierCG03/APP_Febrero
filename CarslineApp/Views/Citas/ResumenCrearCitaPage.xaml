<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarslineApp.Views.Citas.ResumenCrearCitaPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Title="ResumenCrearCitaPage">
    <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="#F5F5F5">

        <!-- HEADER -->
        <Frame Grid.Row="0" 
               BackgroundColor="#B00000" 
               Padding="20" 
               Margin="0" 
               CornerRadius="0" 
               HasShadow="True">
            <Label Text="ðŸ“‹ RESUMEN DE CITA"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
        </Frame>

        <!-- CONTENIDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="15">

                <!-- ==================== DATOS DEL CLIENTE ==================== -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       HasShadow="True" 
                       CornerRadius="12"
                       BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0"
                                   Text="ðŸ‘¤"
                                   FontSize="24"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="DATOS DEL CLIENTE"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#B00000"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                        <Grid ColumnDefinitions="Auto,*"  RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="Nombre:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding NombreCliente}"
                                   FontSize="13"
                                   TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="TelÃ©fono:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding TelefonoCliente}"
                                   FontSize="13"
                                   TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="Direccion:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   Text="{Binding DireccionCliente}"
                                   FontSize="13"
                                   TextColor="Black"/>

                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="RFC:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="3" Grid.Column="1"
                                   Text="{Binding RfcCliente}"
                                   FontSize="13"
                                   TextColor="Black"/>



                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- ==================== DATOS DEL VEHÃCULO ==================== -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       HasShadow="True" 
                       CornerRadius="12"
                       BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="1"
                                   Text="DATOS DEL VEHÃCULO"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#B00000"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                        <Grid ColumnDefinitions="Auto,*"  RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="VehÃ­culo:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding VehiculoCompleto}"
                                   FontSize="13"
                                   TextColor="Black"
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="VIN:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding VinVehiculo}"
                                   FontSize="13"
                                   TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="Placas:"
                                   FontSize="13"
                                   TextColor="#666"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   Text="{Binding PlacasVehiculo}"
                                   FontSize="13"
                                   TextColor="Black"/>

                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- ==================== DETALLES DE LA ORDEN ==================== -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       HasShadow="True" 
                       CornerRadius="12"
                       BorderColor="#E0E0E0">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0"
                                   Text="ðŸ“"
                                   FontSize="24"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="DETALLES DE LA CITA"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#B00000"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>

                        <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                        <!-- Tipo de Orden -->
                        <Frame BackgroundColor="#B00000" 
                               Padding="10" 
                               CornerRadius="8"
                               HasShadow="False">
                            <Label Text="{Binding TipoOrdenNombre}"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </Frame>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="ðŸ”§"
                                   HorizontalOptions="End"
                                   FontSize="24"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text=" TRABAJOS A REALIZAR"
                                   HorizontalOptions="Center"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#B00000"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                            <Frame Grid.Column="2"
                                   BackgroundColor="#B00000"
                                   Padding="8,4"
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="{Binding CantidadTrabajos}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>
                        </Grid>

                        <CollectionView ItemsSource="{Binding Trabajos}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#F9F9F9" 
                                            Padding="12" 
                                            Margin="0,5"
                                            HasShadow="False"
                                            BorderColor="#E0E0E0"
                                            CornerRadius="8">
                                        <VerticalStackLayout Spacing="6">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Label Grid.Column="0"
                                                        Text="âœ“"
                                                        FontSize="16"
                                                        TextColor="#4CAF50"
                                                        FontAttributes="Bold"
                                                        VerticalOptions="Center"/>
                                                <Label Grid.Column="1"
                                                        Text="{Binding Trabajo}"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        TextColor="Black"
                                                        Margin="8,0,0,0"
                                                        LineBreakMode="WordWrap"/>
                                            </Grid>

                                            <!-- Indicaciones (si existen) -->
                                            <Frame BackgroundColor="White" 
                                                    Padding="8" 
                                                    CornerRadius="6"
                                                    HasShadow="False"
                                                    IsVisible="{Binding Indicaciones, Converter={StaticResource StringNotEmptyConverter}}">
                                                <Label Text="{Binding Indicaciones}"
                                                        FontSize="12"
                                                        TextColor="#666"
                                                        LineBreakMode="WordWrap"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Fecha y Hora de Cita -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#FFF3E0" 
                                   Padding="10" 
                                   CornerRadius="8"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸ“… Fecha Cita"
                                           FontSize="11"
                                           TextColor="#F57C00"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding FechaCitaFormateada}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame Grid.Column="1" 
                                   BackgroundColor="#E3F2FD" 
                                   Padding="10" 
                                   CornerRadius="8"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="ðŸ• Hora Cita"
                                           FontSize="11"
                                           TextColor="#1976D2"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding HoraCitaFormateada}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>

                    </VerticalStackLayout>
                </Frame>

                <!-- Mensaje de error -->
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#B00000"
                       FontSize="13"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                       HorizontalOptions="Center"
                       Margin="0,10"/>

                <!-- Activity Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   IsVisible="{Binding IsLoading}"
                                   Color="#B00000"
                                   HeightRequest="40"
                                   HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- ==================== BOTONES DE ACCIÃ“N ==================== -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="0" 
              Padding="0"
              BackgroundColor="White">

            <Button Grid.Column="0"
                    Text="âœï¸ EDITAR"
                    Command="{Binding EditarCitaCommand}"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontAttributes="Bold"
                    FontSize="16"/>

            <Button Grid.Column="1"
                    Text="âœ… CONFIRMAR"
                    Command="{Binding ConfirmarCitaCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontAttributes="Bold"
                    FontSize="16"/>
        </Grid>

    </Grid>
</ContentPage>